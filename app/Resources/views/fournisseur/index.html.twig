{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fournisseurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomfour</th>
                <th>Prenomfour</th>
                <th>Adressefour</th>
                <th>Telfour</th>
                <th>Villefour</th>
                <th>Emailfour</th>
                <th>Datefour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td><a href="{{ path('fournisseur_show', { 'id': fournisseur.id }) }}">{{ fournisseur.id }}</a></td>
                <td>{{ fournisseur.nomFour }}</td>
                <td>{{ fournisseur.prenomFour }}</td>
                <td>{{ fournisseur.adresseFour }}</td>
                <td>{{ fournisseur.telFour }}</td>
                <td>{{ fournisseur.villeFour }}</td>
                <td>{{ fournisseur.emailFour }}</td>
                <td>{% if fournisseur.dateFour %}{{ fournisseur.dateFour|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('fournisseur_show', { 'id': fournisseur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fournisseur_new') }}">Create a new fournisseur</a>
        </li>
    </ul>
{% endblock %}
