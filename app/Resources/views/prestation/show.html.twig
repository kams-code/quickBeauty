{% extends 'shower.html.twig' %}

{% block form %}
   
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestation.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ prestation.code }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ prestation.designation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prestation.description }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ prestation.montant }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ prestation.image }}</td>
            </tr>
            <tr>
                <th>Personnel</th>
                <td>{{ prestation.personnel }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if prestation.date %}{{ prestation.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prestation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prestation_edit', { 'id': prestation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
